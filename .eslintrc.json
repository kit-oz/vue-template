{
  "root": true,
  "extends": [
    "plugin:vue/vue3-recommended",
    "plugin:import/recommended",
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "vue/setup-compiler-macros": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".vue"]
      }
    }
  }
}